<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200dp">
        <TextView
            android:id="@+id/teacher_class_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="30dp"
            android:text="Class ID"
            android:textSize="20dp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/teacher_class_name_bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="20dp"
            android:layout_below="@+id/teacher_class_id"
            android:text="Class Name"
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/teacher_class_offering_bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/teacher_class_name"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="20dp"
            android:text="# Offerings"
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/teacher_classid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/teacher_class_id"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="30dp"
            android:text="Class ID"/>


        <TextView
            android:id="@+id/teacher_class_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="25dp"
            android:layout_below="@+id/teacher_class_id"
            android:layout_toRightOf="@+id/teacher_class_name_bold"
            android:text="Class Name" />

        <TextView
            android:id="@+id/teacher_class_offering_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="25dp"
            android:layout_below="@+id/teacher_class_name"
            android:layout_toRightOf="@+id/teacher_class_offering_bold"
            android:text="Class Offering" />

    </RelativeLayout>

</RelativeLayout>